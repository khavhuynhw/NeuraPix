# NeuraPix Environment Configuration
# Copy this file to .env and fill in your actual values

# ======================
# Spring Profile Configuration
# ======================
SPRING_PROFILES_ACTIVE=development

# ======================
# Database Configuration
# ======================
DB_USERNAME=your_mysql_username
DB_PASSWORD=your_mysql_password

# ======================
# JWT Configuration
# ======================
# Generate a strong secret key for production (minimum 256 bits)
JWT_SECRET=your_super_secret_jwt_key_minimum_256_bits_long_for_security

# ======================
# Email Configuration (Gmail SMTP)
# ======================
MAIL_USERNAME=your_gmail_address@gmail.com
MAIL_PASSWORD=your_gmail_app_password

# ======================
# PayOS Payment Configuration
# ======================
PAYOS_CLIENT_ID=your_payos_client_id
PAYOS_API_KEY=your_payos_api_key
PAYOS_CHECKSUM_KEY=your_payos_checksum_key

# ======================
# Third-party API Keys
# ======================
PIXELCUT_API_KEY=your_pixelcut_api_key
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ======================
# Frontend & CORS Configuration
# ======================
APP_FRONTEND_URL=https://your-domain.com
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ======================
# Webhook Configuration
# ======================
APP_WEBHOOK_BASE_URL=https://api.your-domain.com

# ======================
# Logging Configuration
# ======================
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=WARN
SQL_LOG_LEVEL=WARN

# ======================
# SSL Configuration (Optional)
# ======================
SSL_ENABLED=false
SSL_KEYSTORE_PATH=/path/to/your/keystore.p12
SSL_KEYSTORE_PASSWORD=your_keystore_password

# ======================
# Development Only (Remove in Production)
# ======================
SHOW_SQL=false
FORMAT_SQL=false
USE_SQL_COMMENTS=false